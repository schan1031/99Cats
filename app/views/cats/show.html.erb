<header>
  <h1> <%= @cat.name %> </h1>
  <h2>Cat Attributes</h2>
  <%= link_to "Edit Cat Attributes", edit_cat_url %>
</header>
<table>
  <tr>
    <th>Sex</th>
    <th>Birth Date</th>
    <th>Color</th>
  </tr>
  <tr>
    <td><%= @cat.sex %></td>
    <td><%= @cat.birth_date %></td>
    <td><%= @cat.color %></td>
  </tr>
</table>

<h3>Description</h3>
<p><%= @cat.description %></p>

<h3>Rental Request Dates</h3>
<table>
  <tr>
    <th>Start Dates</th>
    <th>End Dates</th>
    <th></th>
    <th></th>
  </tr>

  <% @requests.each do |request|%>
    <tr>
      <td><%= request.start_date%></td>
      <td><%= request.end_date%></td>
      <td><%= button_to "Approve", cat_rental_request_url(request), method: :approve!%></td>
      <td><%= button_to "Deny", cat_rental_request_url(request), method: :deny!%></td>
    </tr>
  <% end %>
</table>

 <br>


<br>

<footer>
  <%= button_to "Delete Cat", cat_url(@cat), method: :delete%>

  <br>

  <%= link_to "Main Page", cats_url %>
</footer>
